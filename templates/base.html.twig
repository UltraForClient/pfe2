    <script type="application/javascript">
        $( "#sylwester" ).dialog();

        var contact = document.querySelector('#contact');
        var rodo = () => {
                $('.pop-up').fadeIn(1000);
        };

           document.querySelector('.close-button').addEventListener('click', e => {
                    document.body.scrollTop = document.documentElement.scrollTop = contact.offsetTop
                    console.log(contact.offsetTop);
                    $('.pop-up').fadeOut(700);
                    $('#overlay').removeClass('blur-in');
                    $('#overlay').addClass('blur-out');
        });


        document.querySelector('#rodo').addEventListener('click', () => {
            rodo();
            document.body.scrollTop = document.documentElement.scrollTop = 0;
        });

        document.querySelector('#contact_link').addEventListener('click', () => {
            rodo();
        })
    </script>

